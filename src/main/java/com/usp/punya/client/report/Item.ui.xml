<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:p='urn:import:com.vaadin.polymer.paper.widget'
             xmlns:i='urn:import:com.vaadin.polymer.iron.widget'>
    <ui:style>
        @external .done;
        .item .done {
            text-decoration: line-through;
        }

        .title {
            padding-left: 20px;
            font-size: 150%;
            font-weight: normal;
        }
    </ui:style>

    <p:PaperCard>
        <div class="card-content">
            <h4>
                <p:PaperCheckbox ui:field="done"></p:PaperCheckbox>
                <span ui:field="title">Go to Google</span>
            </h4>
            <div ui:field="description"></div>
        </div>
        <div class="card-actions">
            <paper-icon-button icon="favorite" title="favorite"></paper-icon-button>
            <paper-icon-button icon="bookmark" title="bookmark"></paper-icon-button>
            <paper-icon-button icon="cloud-upload" title="cloud-upload"></paper-icon-button>
        </div>
    </p:PaperCard>
</ui:UiBinder>