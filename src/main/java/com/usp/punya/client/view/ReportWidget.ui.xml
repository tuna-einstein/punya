<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:mgwt="urn:import:com.googlecode.mgwt.ui.client.widget"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.important {
		font-weight: bold;
	}
	</ui:style>
      <mgwt:panel.scroll.ScrollPanel>
        <g:FlowPanel>
          <mgwt:form.Form>
            <mgwt:form.FormEntry text="Date">
              <mgwt:input.MDateBox/>
            </mgwt:form.FormEntry>
            <mgwt:form.FormEntry text="First name">
              <mgwt:input.MTextBox ui:field="firstname"/>
            </mgwt:form.FormEntry>
            <mgwt:form.FormEntry text="City">
              <mgwt:input.listbox.MListBox/>
            </mgwt:form.FormEntry>
          </mgwt:form.Form>
          <mgwt:button.Button text="Send" ui:field="sendButton"/>
        </g:FlowPanel>
      </mgwt:panel.scroll.ScrollPanel>
</ui:UiBinder> 